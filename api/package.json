{
  "name": "radio-quantica-api",
  "version": "1.0.0",
  "description": "Backend service for Radio Quantica website and admin tooling.",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts NODE_ENV=production next start",
    "build": "./build.sh",
    "dev": "dotenv -e .env.dev -- cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
    "generate": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint --quiet .",
    "lint-fix": "npm run lint -- --fix",
    "test": "jest",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "generate:importmap": "payload generate:importmap"
  },
  "author": "Christian Gonzalez <christian@particle.fm>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@next/eslint-plugin-next": "^15.3.2",
    "@payloadcms/eslint-plugin": "^3.28.0",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/luxon": "^3.2.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
